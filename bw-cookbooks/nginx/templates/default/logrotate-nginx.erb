# This file is generated by Chef. All changes will be discarded on next chef run.
# Please, be careful.

<%= @logs %> {
    <%= @how_often ? @how_often : "daily" %>
    <% if @copytruncate -%>
    copytruncate
    <% end -%>
    missingok
    notifempty
    rotate <%= @rotate %>
    compress
    <%- u = @user ? @user : "root" %>
    <%- g = @group ? @group : "adm" %>
    create <%= @mode %> <%= u %> <%= g %>
    delaycompress
    <% if not @copytruncate -%>
    sharedscripts
    postrotate
      test -f <%= @pidfile %> && kill -USR1 "$(cat <%= @pidfile %>)"
    endscript
    <% end -%>
}
